<h1>Actor #<%= @actor.id %> details</h1>

<a href="/actors">Go back</a>
<hr>
<br>

<div>
  <div>Name</div>
    <div class="indented"><%=@actor.name%></div>
  <div>Dob</div>
    <div class="indented"><%=@actor.dob%></div>
  <div>Bio</div>
    <div class="indented"><%=@actor.bio%></div>
  <div>Image</div>
    <img class="indented" src=<%=@actor.image%>></div>
  <div>Created at</div>
    <div class="indented"><%=@actor.created_at%></div>
  <div>Updated at</div>
    <div class="indented"><%=@actor.updated_at%></div>
</div>
<br>
<hr>

<h1>Filmography</h1>
  <table border="1">
   <tr>
    <th>
      Title
    </th>

    <th>
      Year
    </th>

    <th>
      Director
    </th>

    <th>
      Character name
    </th>

    <th>
    </th>
  </tr>

  <% @characters.each do |character|%>
    <% movie = Movie.where(:id => character.movie_id).at(0) %>
    <tr>
      <td>
        <%= movie.title %>
      </td>
      <td>
        <%= movie.year%>
      </td>
      <td>
        <%= movie.director_id%>
      </td>
      <td>
       <%= character.name %>
      </td>
      <td>
        <a href="/movies/<%= character.movie_id %>">Show details</a>
      </td>
    </tr>
  <% end %>
  </table>

<style>
  .indented {
    margin-left: 40px;
  }

  img {
    width: 300px;
    height: auto;
  }
</style>
