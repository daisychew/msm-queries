<h1>List of all actors</h1>

<table>
  <tr>
    <th>Id</th>
    <th>Image</th>
    <th>Name</th>
    <th>Dob</th>
    <th></th>
  </tr>

  <% @actors.each do |actor| %>
    <tr>
      <td>
        <%= actor['id'] %>
      </td>
      <td>
        <img src=<%= actor['image']%>>
      </td>
      <td>
        <%= actor['name'] %>
      </td>
      <td>
        <%= actor['dob'] %>
      </td>
      <td>
        <a href="/actors/<%= actor['id'] %>">Show details</a>
      </td>
    </tr>
  <% end %>
</table>

<style>
  table {
    border-style: double; 
    border-collapse: collapse;
    width: 100%;
    table-layout: auto;
    width: fit-content;
  }

  tr, td, th {
    border-style: double;
  }

  img {
    width: 250px;
    height: auto;
  }
